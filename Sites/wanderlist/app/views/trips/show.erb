<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@trip.description%></h1>
<p><a href="/trips/<%=@trip.id %>/edit">Edit This Trip</a></p>
<h3>Destinations on the Trip:</h3>
<ul>
<%@trip.destinations.each do |dest|%>
  <li><a href="/destinations/<%=dest.id%>"><%=dest.name%></a></li>
<%end%>
</ul>
<h3>Status: <%=@trip.status%> </h3>
<br><br>
<form method="post" action="/trips/<%=@trip.id%>/delete">
  <input type="submit" value="Delete Trip">
</form>
<br><br>
<p><a href="/trips">Back to All Trips</a> | <a href="/trips/new">Make a New Trip</a> </p>
